#legal {
	
	.legal-section {

		margin: 25% 5% 2%;
		padding-top: 0;
		
		.legal-copy {
			
			width: 100%;
    	margin: 0 auto;
    	padding: 10% 9%;

			h1 {
				margin-bottom: 8%;
				fontSize(60rem, h1-fontsize, 360, 600);
			}

			h3 {
				margin: 20% 0 15%;
				margin-left: 0;
				fontSize(45rem, h4-fontsize, 360, 600);
			}
			
			p {
				width: 100%;
    		margin: 0;
    		text-align: justify;
				fontSize(45rem, h5-fontsize, 360, 600);
	      lineHeight(40rem, h3-fontsize, 360, 600);
			}
			
			a {
				margin-left: 0;
				margin-top: 40px;
				fontSize(48rem, h5-fontsize, 360, 600);
			}
		}
	}
}