#team-member {
	
	.content-wrapper {
		
		margin-top: 0px;
		
		.team-member-info {
			
			width: 85%;
			margin: 8% 0 0 10%;
			
			.title {

				margin-bottom: 8%;

			}

			h1 {
				fontSize(54rem, h1-fontsize, 360, 600);
	      lineHeight(45rem, h1-fontsize, 360, 600);
			}
			
			h4 {
				fontSize(60rem, h4-fontsize, 360, 600);
				line-height: h3-lineheight;
			}
			
			p {
				fontSize(45rem, h5-fontsize, 360, 600);
	      lineHeight(40rem, h3-fontsize, 360, 600);
			}
			
			a {
				display: inline-block;
				margin-top: 40px;
				margin-right: 30px;
				fontSize(48rem, h5-fontsize, 360, 600);
			}
		
			.team-member-letter {display: none;}

		}
		
		.team-member-board {

			width: 80%;
			margin: 15% auto;
			
			ul {
				li {

				  padding: 0 15%;
				  
				  img {width: 100%;}

				}
			}
		}
	}
}