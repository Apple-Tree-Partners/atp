#portfolio {
	
	.section-nav {
		display:none;
	}
	
	.expertise-section {
  	
  		border-top: 1px solid matte-red;
  		
  		&:first-of-type {
			
			border-top: 2px solid #d51428;
		}
  		
  		&.active {
			
			.lazyLoad {

				opacity: 1;
			}

			.collapse-wrapper {	
				height: auto;
				max-height: 5000px;
			}
			
			.expertise-title {
				
				margin: 25% auto 0 auto;

				h1{
					transform: translate(0, 20px);
					
					&:after {
						transform: translate(0%, -35%) rotate(180deg);
					}
				}
			}
		}

		.lazyLoad {
		  
		  aspect-ratio(1600, 150);
		  opacity: 0;
		  position: absolute;
		  height: 150px; //old 150px
		  transition: opacity 0.3s ease-out;
		  img {height: 150px;}
		  
		}
		
		.expertise-title {
			
			margin: 5% auto 0 auto;
			transition: all 0.3s ease-out;
			
			h1 {
				margin: 0 0 10%;
				fontSize(60rem, h1-fontsize, 360, 600);
				position: relative;
				transform: translate(0, 0);
				transition: transform 0.3s ease-out;
				
				&:after {
					content: "";
				    display: block;
				    background: url("../assets/icons/icon_arrow_down.svg") no-repeat;
				    background-size: contain;
				    transform-origin: center center;
				    position: absolute;
				    right: -20px;
				    top: 50%;
				    transform: translate(0%, -35%) rotate(0deg);
				    transition: transform 0.3s ease-out;
				    width: 25px;
				    height: 15px;
				    float: right;
				    margin: 0px auto;
				}
			}
		}
		
		.collapse-wrapper {

			max-height: 0;
			transition: max-height 0.3s ease-out;
		}
		
		.expertise-info {
			
			width: 85%;
			margin: 0px auto;
	   		padding: 20px 8% 0 8%;
	   		background-color: white;
			
			p {
				fontSize(45rem, h5-fontsize, 360, 600);
				lineHeight(40rem, h3-fontsize, 360, 600);
			}
			
			a {
				margin-top: 30px;
				fontSize(48rem, h5-fontsize, 360, 600);
			}
		}
		
		.expertise-companies {
			
			width: 85%;
			margin: 0 auto;

			ul {
				
				margin: 25px 0;

				li {

					position: relative;
					min-height: 300px;
					margin-bottom: 23px;
					padding: 10px;
					margin-right: 0;
					flex-basis: 100%;
					transition: all 0.2s ease-in-out;
					
					.company-about {
						
						p {

							lineHeight(40rem, h3-fontsize, 360, 600);
							fontSize(45rem, h5-fontsize, 360, 600);

						}
						
						h5 {

							width: 27%;
							fontSize(45rem, h5-fontsize, 360, 600);

						}

					}

				}
			}

		}
	}
}