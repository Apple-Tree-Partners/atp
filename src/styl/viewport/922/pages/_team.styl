#team {
	
	.section-nav {
		display:none;
	}
	
	.team-section {
		
		border-top: 1px solid #d51428;
		
		&:first-of-type {
			
			border-top: 2px solid #d51428;
		}
		
		&.active {
			
			.lazyLoad {

				opacity: 1;
			}

			.collapse-wrapper {	
				height: auto;
				max-height: 5000px;
			}
			
			.team-title {
				
				margin: 25% auto 0 auto;
	
				h1{
					transform: translate(0, 20px);
					
					&:after {
						transform: translate(0%, -35%) rotate(180deg);
					}
				}
			}
		}

		.lazyLoad {
		  
		  aspect-ratio(1600, 150);
		  opacity: 0;
		  position: absolute;
		  height: 150px;
		  transition: opacity 0.3s ease-out;
		  img {height: 150px;}
		  
		}
		
		.team-title {
			
			margin: 5% auto 0 auto;
			transition: all 0.3s ease-out;
			
			h1 {
				margin: 0 0 10%;
				fontSize(60rem, h1-fontsize, 360, 600);
				position: relative;
				transform: translate(0, 0);
				transition: transform 0.3s ease-out;
				
				&:after {
					content: "";
				    display: block;
				    background: url("../assets/icons/icon_arrow_down.svg") no-repeat;
				    background-size: contain;
				    transform-origin: center center;
				    position: absolute;
				    right: -20px;
				    top: 50%;
				    transform: translate(0%, -35%) rotate(0deg);
				    transition: transform 0.3s ease-out;
				    width: 25px;
				    height: 15px;
				    float: right;
				    margin: 0px auto;
				}
			}
		}
		
		.collapse-wrapper {

			max-height: 0;
			transition: max-height 0.2s;
		}
		
		.team-info {
			
			width: 85%;
			margin: 0px auto;
	   		padding: 20px 8% 0 8%;
			
			p {
				fontSize(45rem, h5-fontsize, 360, 600);
				lineHeight(40rem, h3-fontsize, 360, 600);
			}
			
			a {
				margin-top: 30px;
				fontSize(48rem, h5-fontsize, 360, 600);
			}
		}
		
		.team-members {
			
			width: 75%;
			margin-bottom: 40px;
			
			.title {

				margin-left: 4%;
				margin-top: 50px;
				
				&:before {

			    width: 5.8%;
			    height: 5px;
			    margin-top: 1.2%;
			    margin-left: -6.9%;
			    border-bottom: 3px solid #d51428;

				}
				
				&:after {width: 0;}

			}

			ul {
				
				margin: 0;

				li {

					position: relative;
					min-height: inherit;
					margin-bottom: 6%;
					padding: 0;
					
					&:after {
						content: "\2192";
					    display: block;
					    background-size: contain;
					    transform-origin: center center;
					    position: absolute;
					    right: 0px;
					    top: 40%;
					    width: 20px;
					    color: #737373;
					    height: 5px;
					    float: right;
					    margin: 0px auto;
					}
					
					h2 {

						width: 85%;
    				margin: 0;
						text-align: left;
						margin-top: 10%;
						fontSize(33rem, h4-fontsize, 360, 600);
						
					}
					
					p {

    				margin-top: 3%;
						text-align: left;
						fontSize(40rem, h5-fontsize, 360, 600);
						
					}
			
					.team-member-letter {display: none;}
					
					.team-member-about {display: inline-block;}
					
					&:hover {
						.team-member-about {opacity: 0;}
					}

				}
			}
		}
	}
	
