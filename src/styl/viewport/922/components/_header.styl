#header {
	
	height: 55px;
	top: 0;
	padding: 1.4% 8%;

	transition: opacity 0.1s ease-in-out;

	img {

    width: 73px;
    height: 31px;
    margin-top: 4px;
   	margin-left: 6px;

	}
	
	&.small {

		height: 55px;
		background-color: off-white-background;

		img {

	    width: 73px;
	    height: 31px;

		}

		.navigation {

			ul {
				
				li {
	  			border-bottom: 1px dotted darker-grey-copy;

					&:last-of-type {

						margin-right: 0px;

					}
				}
			}
			
			.menu-footer {display: none;}
		}

	}
	
	.menu {

		display: inline-block;
		position: absolute;
		width: 40px;
		height: 40px;
    top: 22px;
    right: 10px;
    text-align: center;
		font-family: National-Book;
		fontSize(48rem, h5-fontsize, 360, 600);
		z-index: 1000;
		
		fill: dark-grey-copy;
		
		.icon {

			height: 12px;
	    margin-right: 4px;

		}
		
		.menu-copy {
			display: inline-block;
			border-bottom: 1px dotted black;
		}

	}
	
	&.active {
		
		display: block;
		height: 100%;
		
		.menu {color: off-white-background;}

	}
	
	.navigation {
		
		display: none;
		opacity: 0;
		
		transition: all 0.2s ease-in-out;
		
		.mobile-background {

			display: none;

		}
		
		&.active {
		
			display: inline-block;
	    position: absolute;
	    width: 100%;
	    height: 100%;
	    top: 0;
	    left: 0;
	    padding: 0;

	    opacity: 1;
		
			.mobile-background {

				display: inline-block;
				position: absolute;
				width: 100%;
				height: 100%;
				top: 0; 
				left: 0;
				margin: 0;
				z-index: -1;

			}
	    
	    ul {

	    	li {

	    		display: block;
					width: 100%;
					margin: 12% auto;
					text-align: center;
					border-bottom: none;
					
					&:first-of-type {

						margin-top: 45%;

					}
					
					a {

						color: off-white-background;
						fontSize(24rem, h5-fontsize, 360, 600);
						border-bottom: 1px dotted off-white-background;

					}

	    	}

	    }
	    
	    .menu-footer {display: table;}

		}

		ul {
			
			text-align: right;

			li {

				display: inline-block;
				margin-right: 60px;
				font-family: National-Book;
				fontSize(150.55rem, h5-fontsize, 360, 600);
  			border-bottom: 1px dotted darker-grey-copy;
			}
		}
		
		.menu-footer {

			display: none;
			position: absolute;
			width: 100%;
			height: 159px;
			bottom: 0;
			background-color: black;
	
				.links {
					
					display: table;
			    width: 80%;
			    margin: 13% auto 0;
					
					li {	
						
						display: table-cell;
						text-align: center;
						width: 33%;

						a {

							color: white;
							text-decoration: none;
							border-bottom: none;
							font-family: National-Book;
							fontSize(50rem, h5-fontsize, 360, 600);

						}
						
					}
				}

		}
	}
}