#team-member {
	
	.content-wrapper {
		
		width: 88%;
		margin: 40px 6% 0;
    	padding-top: 25px;
    	background-color: white;
		margin-top: 50px;
		z-index: 1;

		.team-member-info {
			
			width: 65%;
			margin: 5% 0 0 10%;
			padding-bottom: 50px;
			border-bottom: 1px solid rgba(0,0,0,0.1);
			
			.title {

				margin-bottom: 4.5%;
				text-align: left;
				
				&:after {

					width: 0;

				}

			}

			h1 {
				width: 75%;
				margin: 2% 0;
				color: darker-grey-copy;
				fontSize(104.599rem, h1-fontsize, 360, 1280);
				lineHeight(70.555rem, h2-lineheight, 320 , 1280);
			}
			
			h4 {
				margin-bottom: 5%;
				color: grey-copy;
				font-family: National-Book;
				fontSize(123.05rem, h4-fontsize, 360, 1280);
				line-height: h3-lineheight;
			}
			
			p {
				fontSize(150.55rem, h5-fontsize, 360, 1280);
				line-height: h3-lineheight;
			}
			
			a {
				display: inline-block;
				margin-top: 50px;
				margin-right: 60px;
				fontSize(142.2rem, h5-fontsize, 360, 1280);
			}
		
			.team-member-letter {

				position: absolute;
				opacity: 0.67;
				min-width: 30%;
				top: 210px;
				right: 9%;
				color: big-letters;
				fontSize(22.75rem, h1-fontsize, 360, 1280);
				letter-spacing: -14px;

			}

		}
		
		.team-member-board {
			
			width: 100%;
    	margin: 50px 0 50px 10%;
			
			.title {

				text-align: left;
				
				&:after {

					width: 0;

				}

			}

			ul {
				
				margin: 25px 0;

				li {

					display: inline-block;
					position: relative;
					width: 345px;
					height: 210px;
					margin-right: 2%;
					margin-bottom: 2%;
					padding: 0 53px;
					background-color: off-white-background;
					
					span {

						display: inline-block;
					  height: 100%;
					  vertical-align: middle;
					  
					}

					img {

						display: inline-block;
						width: 180px;
						vertical-align: middle;

					}
					
					.company-about {

						display: inline-block;
						opacity: 0;
				    position: absolute;
				    width: 100%;
				    height: 100%;
				    top: 0;
				    left: 0;
				    padding: 8%;
				    background-color: off-white-nav;
						border-bottom: none;
						
						transition: all 0.1s ease-in-out;
						
						p {

							text-align: left;
							line-height: h4-lineheight;
							fontSize(150.55rem, h5-fontsize, 360, 1600);

						}
						
						h5 {

							display: inline-block;
							margin-top: 20px;
							font-family: Sabon;
							color: matte-red;
							fontSize(142.2rem, h5-fontsize, 360, 1600);
							border-bottom: 1px dotted darker-grey-copy;

						}

					}
					
					&:hover {
						
						.company-about {

							opacity: 1;
					
						}

					}
					
				}
			}

		}
	}
}