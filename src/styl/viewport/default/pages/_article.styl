#article {

	.content-wrapper {
		margin: 40px 6% 2%;
  	padding-top: 25px;
  	background-color: white;
  	display: table;
		z-index: 1;

		.article-body {
			
			width: 80%;
			margin: 5% auto 0;
			padding-bottom: 5%;
			//border-bottom: 1px solid rgba(0,0,0,0.1);

			h1, h2, h3, h4, h5, h6 {
				margin: 5% 0 3% 5%;
				color: darker-grey-copy;
			}

			h1 {
				
				fontSize(95rem, h1-fontsize, 360, 1280);

				&:first-of-type {

					margin: 2% 0 7%;
					fontSize(120.75rem, h1-fontsize, 360, 1280);

				}
			}
			
			h2 {
				fontSize(104.599rem, h1-fontsize, 360, 1280);
			}
			
			h3 {
				fontSize(99.555rem, h2-fontsize, 360, 1280);
			
				&:first-of-type {

					margin: 0;
					fontSize(165rem, h5-fontsize, 360, 1280);

				}
			}
			
			h4 {
				fontSize(123.05rem, h4-fontsize, 360, 1280);
			}
			
			h5 {
				fontSize(142.2rem, h5-fontsize, 360, 1280);
			}
			
			h6 {
			  font-family: National-Medium;
			  letter-spacing: 1.5px;
			  color: matte-red;
			  text-transform: uppercase;
			  fontSize(140.11rem, h5-fontsize, 360, 1280);
			}

			a {
				display: inline-block;
				margin-left: 5%;
				fontSize(142.2rem, h5-fontsize, 360, 1280);
			}
			
			p {
				width: 95%;
				margin: 0 5% 3% 5%;
				text-align: justify;
				text-justify: inter-word;

				a {
					fontSize(150.55rem, h5-fontsize, 360, 1280);
					line-height: h3-lineheight;
					margin-left: 0;
				}
			
				strong {font-family: National-Medium;}
			}
			
			p,em {

				fontSize(150.55rem, h5-fontsize, 360, 1280);
				line-height: h3-lineheight;

			}
			
			img {

				max-width: 100%;

			}

		}
	}
	
	.social {
		
		height: 135px;
		width: 100%;
		background-color: #fbfbfb;
		border-bottom: 1px solid #f2f2f2;
		border-top: 1px solid  #f2f2f2;
		margin-bottom: 100px;

		.icon-container {
			
			margin: 0 18%;
			height: 100%;

			li {
				
				display: inline-block;
				
				p {
					font-size: h5-fontsize;
					margin-right: 10px;
				}

				button, a {
					
					width: 40px;
					height: 50px;
					display: block;
					position: relative;
					cursor: pointer;
					background: none;
					outline: none;
					border: none;
					
					svg {

						display: block;
						width: 20px;
						height: 20px;	
						position: absolute;
						left: 50%;
						top: 50%;
						transform: translate(-50%, -50%);
					}
					

					&.facebook {
						
						svg {
							width: 18px;
							height: 18px;
						}
					}
					
					&.twitter {
						
						svg {
							padding-top: 2px;
						}
					}
					
					&.linkedin {
						
						svg {
							
							width: 18px;
							height: 18px;
						}
					}
					
					&.mail {
						
						svg {
							padding-top: 2px;
							width: 18px;
							height: 18px;
						}
					}
				}
				
				&:hover {

					button, a {

						svg {

							.st0 {
								fill: matte-red;
							}
						}
					}
				}
			}
		}
	}
}