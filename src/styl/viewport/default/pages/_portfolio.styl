#portfolio {

	.expertise-section {

		.lazyLoad {

			aspect-ratio(1600, 250);
			position: absolute;
			width: 100%;
			max-width: 1600px;
			height: 250px;
			z-index: 0;

			img {

				height: 250px;

			}

		}

		.expertise-title {

			width: 85%;
			margin: 125px auto 0;
	    padding: 45px 8% 2% 8%;
			background-color: white;
			z-index: 1;

			h1 {
				margin: 2% 0;
				color: darker-grey-copy;
				font-size: 45px;
			}
		}

		.collapse-wrapper {

			overflow: hidden;
			width: 100%;
			height: 100%;
			z-index: 5;
		}

		.expertise-info {

			width: 85%;
	   		display: table;
			margin: 0px auto;
			padding: 0 8% 5% 8%;
			background-color: white;

			p {
				fontSize(150.55rem, h5-fontsize, 360, 1600);
				line-height: h3-lineheight;
			}

			a {
				display: inline-block;
				margin-top: 50px;
				fontSize(142.2rem, h5-fontsize, 360, 1600);
			}
		}

		.expertise-companies {

			width: 85%;
			margin: 0 auto 2%;

			ul {

				margin: 25px 0;

				li {

					display: block;
					flex-basis: 30%;
					position: relative;
					width: 345px;
					height: 230px;
					margin-right: 5%;
					margin-bottom: 50px;
					text-align: center;
					background-color: off-white-background;

					&:nth-child(3n) {

						margin-right: 0;

					}

					span {

						display: inline-block;
					  height: 100%;
					  vertical-align: middle;

					}

					img {

						display: inline-block;
						width: 180px;
						vertical-align: middle;

					}

					.company-about {

						display: inline-block;
						opacity: 0;
				    position: absolute;
				    width: 100%;
				    height: 100%;
				    top: 0;
				    left: 0;
				    padding: 8%;
				    background-color: big-letters;
						border-bottom: none;

						transition: all 0.1s ease-in-out;

						p {

							text-align: left;
							line-height: h4-lineheight;
							fontSize(150.55rem, h5-fontsize, 360, 1600);

						}

						h5 {

							display: block;
							width: 31%;
							margin-top: 20px;
							font-family: Sabon;
							color: matte-red;
							text-align: left;
							fontSize(142.2rem, h5-fontsize, 360, 1600);
							border-bottom: 1px dotted darker-grey-copy;

						}

					}

					&:hover {

						.company-about {

							opacity: 1;

						}

					}

				}
			}

		}
	}
}
